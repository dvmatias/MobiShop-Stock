<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/viewAddButton"
        app:layout_constraintBottom_toBottomOf="@id/imageViewAddColorQuantityViewButton"
        app:layout_constraintEnd_toStartOf="@id/imageViewAddColorQuantityViewButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageViewAddColorQuantityViewButton"
        app:layout_constraintVertical_bias="0.75"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="12dp"
        android:background="@color/colorAccent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewAddColorQuantityViewButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_add_color_quantity_36dp" />

</androidx.constraintlayout.widget.ConstraintLayout>