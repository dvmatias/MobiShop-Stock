<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.cmdv.components.colorpicker.ComponentColorPickerButton
        android:id="@+id/btnColorPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinnerColorQuantity"
        style="@style/SpinnerStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.4"
        android:layout_marginEnd="12dp"
        app:layout_constraintStart_toEndOf="@id/btnColorPicker"
        app:layout_constraintBottom_toBottomOf="@id/btnColorPicker"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewDeleteViewButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_delete_color_quantity_36dp"
        app:layout_constraintBottom_toBottomOf="@id/btnColorPicker"
        app:layout_constraintStart_toEndOf="@id/spinnerColorQuantity" />
</androidx.constraintlayout.widget.ConstraintLayout>