<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/cereal_bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/colorTextDark1</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextTitleDialog">
        <item name="android:background">@drawable/bgr_title_dialog</item>
        <item name="android:fontFamily">@font/cereal_medium</item>
        <item name="android:textColor">@color/colorTextDark1</item>
        <item name="android:lines">@integer/int_1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_20sp</item>
        <item name="android:paddingTop">@dimen/dim_30dp</item>
        <item name="android:paddingBottom">@dimen/dim_14dp</item>
        <item name="android:paddingStart">@dimen/dim_28dp</item>
        <item name="android:paddingEnd">@dimen/dim_28dp</item>
    </style>

    <style name="TextDescriptionDialog">
        <item name="android:fontFamily">@font/cereal_book</item>
        <item name="android:textColor">@color/colorTextDark2</item>
        <item name="android:textSize">@dimen/text_15sp</item>
        <item name="android:paddingTop">@dimen/dim_12dp</item>
        <item name="android:paddingBottom">@dimen/dim_12dp</item>
        <item name="android:paddingStart">@dimen/dim_28dp</item>
        <item name="android:paddingEnd">@dimen/dim_28dp</item>
    </style>

    <style name="TextDescriptionDialog.Small">
        <item name="android:textSize">@dimen/text_13sp</item>
    </style>

    <style name="ButtonPositiveDialog">
        <item name="android:layout_marginTop">@dimen/dim_30dp</item>
        <item name="android:layout_marginEnd">@dimen/dim_28dp</item>
        <item name="android:backgroundTint">@color/colorMain</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ButtonNegativeDialog">
        <item name="android:layout_marginTop">@dimen/dim_30dp</item>
        <item name="android:layout_marginEnd">@dimen/dim_24dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/colorMain</item>
    </style>
</resources>