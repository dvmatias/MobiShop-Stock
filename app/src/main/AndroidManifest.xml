<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cmdv.mobishopstock">

    <application
        android:name=".MobiShopStockApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.cmdv.feature.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.cmdv.feature.ui.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"
            android:theme="@style/MainActivityTheme" />

        <activity
            android:name="com.cmdv.feature.CreateProductActivity"
            android:label="@string/title_activity_create_product"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/CreateProductActivityTheme" />
        
        <activity android:name="com.cmdv.feature.EditProductActivity"
            android:label="@string/title_activity_edit_product"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.EditProductActivityTheme"/>


        <activity android:name="com.cmdv.feature.SearchActivity"
            android:label="@string/title_activity_search"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:theme="@style/AppTheme.SearchActivityTheme" />

    </application>

</manifest>